{
  "compilerOptions": {
    "jsx":"react",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false
  },
  "files": [
    "app.module.ts",
    "main.ts",
    "typings/index.d.ts"
  ],

  "angularCompilerOptions": {
    "genDir": "./aot",
    "skipMetadataEmit" : true
  }
}